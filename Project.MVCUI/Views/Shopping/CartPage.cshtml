@model CartPageVM
@{
    ViewBag.Title = "CartPage";
}

<div class="jumbotron">
    Odemeniz gereken toplam tutar =>  @Model.Cart.TotalPrice $ ...Siparisi onaylamak icin lütfen @Html.ActionLink("tıklayınız", "SiparisiOnayla")
</div>


<div class="row product-list">
    @foreach (CartItem item in Model.Cart.Sepetim)
    {


        <div class="col-md-4">
            <section class="panel">
                <div class="pro-img-box">
                    @if (item.ImagePath == null || item.ImagePath == "3" || item.ImagePath.Contains("nightlife"))
                    {
                        <img src="~/Pictures/69c2e9ece9eb149d2def96a5aa199e17.jpg" alt="Resim yok" width="100" height="300" title="@item.Name" />
                    }
                    else
                    {
                        <img src="@item.ImagePath" alt="Resim yok" width="100" height="300" title="@item.Name" />
                    }

                    <a href="@Url.Action("DeleteFromCart",new { id=item.ID})" class="adtocart">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>

                    <div class="panel-body text-center">
                        <h4>
                            <a href="#" class="pro-title" title="@item.Name">
                                @item.Name x @item.Amount
                            </a>
                        </h4>
                        <p class="price">
                            $@item.SubTotal
                        </p>
                    </div>

                </div>
            </section>
        </div>

    }
</div>


@section Member
{

    @if (Session["member"] != null)
    {
        <span class="from">@((Session["member"] as AppUser).UserName)</span>
    }
}

