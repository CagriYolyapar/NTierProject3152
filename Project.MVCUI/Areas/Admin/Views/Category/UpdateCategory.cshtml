@model CategoryVM

@{
    ViewBag.Title = "UpdateCategory";
}

<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm())
{

    @Html.HiddenFor(x=>x.Category.ID)
    <div class="row">
        <div class="col-sm-12">

            <section class="panel">
                <header class="panel-heading">
                    Kategori Güncelleme Sayfası
                </header>


                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2"> Kategori İsim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2"> Acıklama</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />


                    <div class="form-group">
                        <label class="col-sm-2"> Acıklama</label>
                        <div class="col-sm-10">
                            @Html.EnumDropDownListFor(x=>x.Category.Status)
                        </div>
                    </div>

                    <br /> <br />




                    <div class="form-group">
                        <label class="col-sm-2"> </label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary" style="width:100px;"> Güncelle</button>
                        </div>
                    </div>


                </div>

            </section>

        </div>
    </div>
}


