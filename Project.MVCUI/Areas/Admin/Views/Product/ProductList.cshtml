@model ProductVM

@{
    ViewBag.Title = "ProductList";
}


<section class="panel">
    <header class="panel-heading">
        @Html.ActionLink("Tum Kategoriler", "GetAllCategories")
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Urun ID</th>
                        <th>Urun Ismi</th>
                        <th>Urun Fiyatı</th>
                        <th>Urun Stok</th>
                        <th>Urun Kategorisi</th>
                        <th>Urun Resmi</th>

                        
                        <th>Durum</th>
                        <th class="hidden-phone">Güncelle</th>
                        <th class="hidden-phone">Sil</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (Product item in Model.Products)
                    {

                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td> 
                                @item.ProductName
                            </td>
                            <td class="hidden-phone">@item.UnitPrice</td>
                            <td>@item.UnitsInStock</td>
                            @if(item.Category == null) { <td>Kategorisi  yok</td>}
                else { <td>@item.Category.CategoryName</td>}

                            <td><img width="30" height="30" title="@item.ProductName" src="@item.ImagePath" />  </td>

                            <td>@item.Status</td>
                            <td class="center hidden-phone">@Html.ActionLink("Güncelle", "UpdateProduct", new { id = item.ID }, new { @class = "btn btn-warning" })</td>
                            <td class="center hidden-phone">@Html.ActionLink("Sil", "DeleteProduct", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                        </tr>
                    }



                </tbody>
            </table>

        </div>
    </div>
</section>
<script src="~/Areas/Admin/AdminScripts/AdminProductDTJ.js"></script>